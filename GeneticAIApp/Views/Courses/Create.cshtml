@model GeneticAIApp.Models.CoursesViewModel

@{
    ViewData["Title"] = "Създаване";
}

<h1>Създаване</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GradeId" class="control-label">Клас</label>
                <select asp-for="GradeId" class="form-control" asp-items="ViewBag.GradeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Предмет</label>
                <select asp-for="SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Teacherid" class="control-label">Учител</label>
                <select asp-for="Teacherid" class ="form-control" asp-items="ViewBag.Teacherid"></select>
            </div>
            <div class="form-group">
                <label asp-for="ForWeekId" class="control-label">Часове за седмица</label>
                <input asp-for="ForWeekId" class="form-control" />
                <span asp-validation-for="ForWeekId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно в списъка</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
